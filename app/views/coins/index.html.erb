<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td class="align-middle"><%= coin.description %></td>
        <td class="align-middle"><%= coin.acronym %></td>
        <td class="align-middle"><%= image_tag coin.url_image, width: 30, height: 30 %></td>
        <td><%= link_to t('links.show'), coin, class:"btn btn-info" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-warning" %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm_delete') }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('links.new')} #{Coin.model_name.human}" , new_coin_path, class:"btn btn-success" %>
